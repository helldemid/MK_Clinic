{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	<section class="gray_back registration-section">
		<img src="{{ asset('media/registration_banner.jpg') }}" alt="Registration Banner" class="registration-banner">
		<div class="registration-form">
			<h1>Login</h1>
			<p>New to M.K. Aesthetic Clinic?
				<span>
					<a href="{{ path('app_register') }}">Sign up</a>
				</span>
			</p>

			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<form action="{{ path('app_login') }}" method="post">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="full">
					<input type="email" id="inputEmail" name="email" value="{{ last_username }}" class="form-control" placeholder="Email address" required autofocus>
				</div>

				<div class="full">
					<input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
				</div>
				<div class="full">
					<button type="submit">Log in</button>
				</div>
			</form>
			<p class="small_text">Something went wrong?
				<span>
					<a href="{{ path('app_forgot_password') }}">Forgot password?</a>
				</span>
			</p>
		</div>
	</section>
{% endblock %}
