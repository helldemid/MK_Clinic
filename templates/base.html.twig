<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}{% endblock %}
		</title>

		<meta name="description" content="M.K. Aesthetic Clinic — certified specialists and modern equipment. Safe and effective cosmetic treatments tailored to your beauty needs.">

		<meta property="og:title" content="Cosmetic Treatments | M.K. Aesthetic Clinic">
		<meta property="og:description" content="Certified specialists, modern equipment, and a wide range of safe cosmetic treatments for your beauty and confidence.">
		<meta property="og:image" content="{{ asset('media/og-image.png') }}">
		<meta property="og:type" content="website">
		<meta property="og:url" content="{{ app.request.uri }}">
		<meta property="og:locale" content="en_GB">

		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:image" content="{{ asset('media/og-image.png') }}">

		<meta name="theme-color" content="#ffffff">

		<link rel="canonical" href="{{ app.request.uri }}">
		<link rel="icon" type="image/x-icon" sizes="48x48" href="{{ asset('media/favicon-48x48.ico') }}">
		<link rel="icon" type="image/x-icon" sizes="16x16" href="{{ asset('media/favicon-16x16.ico') }}">

		<link rel="apple-touch-icon" href="{{ asset('media/apple-logo.png') }}">

		<meta name="author" content="M.K. Aesthetic Clinic"> {% block stylesheets %}{% endblock %}
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
		{{ encore_entry_link_tags('app') }}
	</head>
	<body>
		<header>
			{% set promoItems = sitePromoItems|default([]) %}
			{% set firstPromo = promoItems|first %}
			<div class="promo">
				<a id="promoText" href="{{ firstPromo.url|default('#') }}" data-promo-items="{{ promoItems|json_encode|e('html_attr') }}">{{ firstPromo.text|default('50% OFF all laser device treatments') }}</a>
			</div>
			<nav>
				<div class="menu-btn" id="menuBtn">
					<span></span>
					<span></span>
					<span></span>
				</div>
				<div class="mobile-menu nav-links" id="mobileMenu">
					<a href="{{ path('homepage') }}">CLINIC</a>
					<a href="{{ path('treatments') }}">TREATMENTS</a>
					<a href="{{ path('contacts') }}">CONTACT US</a>
					<a href="{{ path('price_list') }}">PRICE LIST</a>
					<a href="https://partner.pabau.com/online-bookings/mkaestheticclinic">BOOK NOW</a>
				</div>

				<div class="links desktop-menu nav-links">
					<div class="menu-item">
						<a href="{{ path('homepage') }}">CLINIC</a>
					</div>

					<div class="menu-item">
						<a href="{{ path('treatments') }}" class="menu-link" id="mega-menu-opener">TREATMENTS</a>
					</div>

					<div class="menu-item">
						<a href="{{ path('contacts') }}">CONTACT US</a>
					</div>
					<div class="menu-item">
						<a href="{{ path('price_list') }}">PRICE LIST</a>
					</div>
				</div>

				<div class="mega-menu" id="mega-menu">
					<div class='inner'>
						{% for categoryName, treatments in dataForMenu %}
							<div class="col">
								<h4>{{ categoryName }}</h4>
								<ul>
									{% for treatment in treatments %}
										<li>
											<a href="{{ path('treatment_show', { id: treatment.id, slug: treatment.name|lower|replace({' ': '_'}) }) }}">{{ treatment.name }}</a>
										</li>
									{% endfor %}
								</ul>
							</div>
						{% endfor %}
					</div>
				</div>

				<div class="logo_nav" id="logo_nav">
					<img src="{{ asset('media/navigation_logo.svg') }}" alt="Logo" class="logo">
					<p class="active">M.K. AESTHETIC CLINIC</p>
				</div>
				<div class="header_interactive">
					<button class="header_book book_now">BOOK NOW</button>
					{% if app.user %}
						<div class="account_icon">
							<a href="{{ path('app_account') }}">
								<img src="{{ asset('media/icons/profile.svg') }}" alt="Profile">
							</a>
						</div>
					{% else %}
						<div class="account_icon">
							<a href="https://partner.pabau.com/mkaestheticclinic/login">
								<img src="{{ asset('media/icons/account.svg') }}" alt="Profile">
							</a>
						</div>
					{% endif %}
				</div>
			</nav>
		</header>

		<main>
			{% block body %}{% endblock %}
		</main>

		<footer>
			<div class="logo_wrap">
				<img src="{{ asset('media/footer_logo.svg') }}" alt="Logo" class="logo">
				<h3>M.K. Aesthetic Clinic</h3>
			</div>
			<div class="content">
				<div id="map" style="width:650px; height:450px;"></div>
				<div class="links">
					<h3>Customer care</h3>
					<a href="{{ path('help', { slug: 'rewards-programme' }) }}">Rewards Programme</a>
					<a href="{{ path('help', { slug: 'cancellation-policy' }) }}">Cancellation Policy</a>
					<a href="{{ path('help', { slug: 'access-statement' }) }}">Access Statement</a>
					<a href="{{ path('help', { slug: 'complaints-policy' }) }}">Complaints Policy</a>
					<a href="{{ path('help', { slug: 'chaperone-policy' }) }}">Chaperone Policy</a>
					<a href="{{ path('help', { slug: 'patient-notice' }) }}">Patient Notice</a>
					<a href="{{ path('help', { slug: 'privacy-policy' }) }}">Privacy Policy</a>
					<a href="{{ path('contacts') }}">Contact us</a>
					<a href="{{ path('help', { slug: 'career' }) }}">Career</a>
					<a href="{{ path('help', { slug: 'faqs' }) }}">FAQs</a>
				</div>
				<div class="links">
					<h3>Treatments</h3>
					{% for category in treatmentsCategories %}
						{% if category.is_shown %}
							<a href="{{ path('treatments', { category: category.id }) }}">{{ category.name }}</a>
						{% endif %}
					{% endfor %}
				</div>
				<div class="links">
					<h3>Social media</h3>
					<a href="https://www.instagram.com/m.k.aestheticclinic?igsh=c2g4NzRuOHh6MWNi">Instagram</a>
					<a href="https://facebook.com">Facebook</a>
					<a href="https://wa.me/447717205281">WhatsApp</a>
				</div>
			</div>
			<div class="extra_info">
				<p>Designed and created by
					<a href="https://www.instagram.com/helldemid">helldemid</a>
				</p>
				<p>©{{ "now"|date("Y") }}
					M.K. Aesthetic Clinic</p>
			</div>
		</footer>

		<script src="{{ asset('js/main.js') }}"></script>
		<script src="{{ asset('js/maps.js') }}"></script>
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		<script src="{{ asset('js/alertService.js') }}"></script>
		<script src="{{ asset('js/apiService.js') }}"></script>
		<script src="{{ asset('js/appointments.js') }}"></script>
		<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC8iaoY6ZYdXVXs3IPAmtescG6JoJh-Qio&libraries=places&callback=initMap" async defer></script>
		{% block javascripts %}{% endblock %}
		{{ encore_entry_script_tags('app') }}
	</body>
</html>
