{% extends 'base.html.twig' %}

{% block title %}Treatments
{% endblock %}

{% block body %}
	<section class="treatments_banner">
		<div class="back_full_picture">
			<picture>
				<source media="(orientation: portrait)" srcset="{{ asset('media/treatments_mobile.png') }}">
				<source media="(orientation: landscape)" srcset="{{ asset('media/treatments_banner_back.png') }}">
				<img src="{{ asset('media/treatments_banner_back.png') }}" alt="welcome image">
			</picture>
		</div>
		<div class="banner_info_wrap">
			<div class="header_banner_info">
				<h2>M.K. AESTHETIC CLINIC</h2>
				<h1>Treatments</h1>
				<p>From rejuvenating facials to advanced skin procedures,
					our treatments are tailored to your unique needs â€” performed by certified professionals
					using the latest technology.
				</p>
			</div>
		</div>
	</section>
	<div class="filters" data-controller="treatments">
		<span>Choose category</span>
		<select data-action="change->treatments#filter">
			<option value="" {{ selectedCategory == 0 ? 'selected' }}>All Categories</option>
			{% for category in categories %}
				<option value="{{ category.id }}" {{ selectedCategory == category.id ? 'selected' }}>
					{{ category.name }}
				</option>
			{% endfor %}
		</select>
		{% if isEditor %}
			<span>Activity</span>
			<select id="activity" data-action="change->treatments#filter">
				<option value="1" selected>Only active</option>
				<option value="0">Only hidden</option>
				<option value="-1">All</option>
			</select>
			<button type="button" class="create_button" id="create-treatment-btn">
				Create Treatment +
			</button>
		{% endif %}
	</div>

	<section class="treatments_box">
		<div id="treatments_container">
			{% include 'treatments/_treatment_cards.html.twig' with {'treatments': treatments, 'isEditor': isEditor} %}
		</div>
	</section>

	<section class="gray_back book_form" id="book_now">
		<h2>Need a consultation?</h2>
		<div class="book_form_wrap">
			{% include 'components/consultation_form.html.twig' %}
			<div class="book_pic">
				<div class="back_full_picture">
					<img src="{{ asset('media/book_pic_2.png') }}">
				</div>
			</div>
		</div>
	</section>


{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/treatments.js') }}"></script>
{% endblock %}
