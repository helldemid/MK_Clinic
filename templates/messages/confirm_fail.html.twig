{% extends 'base.html.twig' %}

{% block title %}
	{{ title|default('Error!') }}
{% endblock %}

{% block body %}
	<div class="message-box">
		<div class="row justify-content-center">
			<div class="col-md-5">
				<div class="message-box _success _failed">
					<i class="fa fa-times-circle" aria-hidden="true"></i>
					<h2>
						{{ title|default('Error!') }}
					</h2>
					<p>
						{{ message|default('Something went wrong. Please try again or contact support') }}
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
